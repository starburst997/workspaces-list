{
  "name": "workspaces-list",
  "displayName": "Workspaces List",
  "description": "Manage multiple VSCode/Cursor workspaces with Claude Code status monitoring",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "workspace",
    "window manager",
    "claude-code",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workspaces-explorer",
          "title": "Workspaces",
          "icon": "$(window)"
        }
      ]
    },
    "views": {
      "workspaces-explorer": [
        {
          "id": "workspacesList",
          "name": "Workspaces"
        }
      ]
    },
    "commands": [
      {
        "command": "workspacesList.refresh",
        "title": "Refresh Workspaces",
        "icon": "$(refresh)"
      },
      {
        "command": "workspacesList.focusWorkspace",
        "title": "Focus Workspace"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "workspacesList.refresh",
          "when": "view == workspacesList",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "lucide": "^0.294.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/workspaces-list"
  },
  "os": [
    "darwin"
  ]
}
